<!DOCTYPE html>
<html data-ng-app="loginApp">
    <head>
        <meta name="viewport" content="width=device-width, maximum-scale=1, initial-scale=1, user-scalable=0">
        <meta charset="utf-8">
        <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
        <title>Admin | Login</title>
        <!--<script type="text/javascript" src="~/admin/js/globalresources.js"></script>-->
        <script type="text/javascript" src="/admin/content/scripts/Vendor/jquery-1.10.2.js"></script>
        <link href="/admin/content/font-awesome/css/font-awesome.css" media="screen" rel="stylesheet" type="text/css" />
        <link rel='stylesheet' href='/admin/content/css/bootstrap.min.css' />
    	<link rel='stylesheet' href='/admin/content/css/sb-admin.css' />
    </head>
    <body ng-controller="loginController">
        <div ui-growler></div>
        <div class="container">
            <div class="row">
                <div class="col-md-4 col-md-offset-4">
                    <div class="login-panel panel panel-default" login-Shaker>
                        <div class="panel-heading">
                            <span>Admin login</span>
                        </div>
                        <div class="panel-body">
                            <form name='loginform'>
                                <div class="form-group">
                                    <span class="add-on">
                                        <i class="icon-user"></i>
                                    </span>
                                    <input class="form-control" type="text" data-ng-model="username"
                                           placeholder="Username"
                                           ui_focus="" required />
                                </div>
                                <div class="form-group">
                                    <span class="add-on">
                                        <i class="icon-key"></i>
                                    </span>
                                    <input class="form-control" type="password" data-ng-model="password"
                                           placeholder="Password"
                                           required />
                                </div>
                                <div class="form-group">
                                    <label>Language</label>

                                    <select class="form-control" ng-model="language">
                                        <option value="en">EN</option>
                                        <option value="nl">NL</option>
                                    </select>

                                </div>
                                <div>
                                    <input type="submit" value="Login"
                                           class="btn btn-lg btn-primary btn-block" ng-disabled="!loginform.$valid" ng-click="login()" />
                                </div>
                            </form>
                        </div>
                        <div class="panel-footer">
                            <img class="pull-right" src="/admin/content/images/sharpsolutions_logo.png" />
                            <div class="clearfix"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>