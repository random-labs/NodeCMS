<div ui-growler></div>

<ul class="nav nav-tabs">
    <li class="active"><a href="#content" data-toggle="tab"><%= __("ADMIN_PAGES_LABEL_CONTENTTAB") %></a></li>
    <li><a href="#metadata" data-toggle="tab"><%= __("ADMIN_PAGES_LABEL_METADATATAB") %></a></li>
</ul>
<div class="tab-content">
    <div class="tab-pane active" id="content">
        <div class="row">
            <div class="col-lg-6">
                <div class="form-group">
                    <label><%= __("ADMIN_PAGES_LABEL_PAGENAME") %></label>
                    <input class="form-control" type="text" data-ng-model="page.name" required />
                </div>
                <div class="form-group">
                    <label><%= __("ADMIN_PAGES_LABEL_NAVIGATEURL") %></label>
                    <input class="form-control" type="text" data-ng-model="page.url" required />
                </div>
            </div>
            <div class="col-lg-6">
                <div class="form-group">
                    <label><%= __("ADMIN_PAGES_LABEL_TEMPLATE") %></label>
                    <select class="form-control" ng-model="page.selectedTemplate">
                        <option value="Normal">Normal</option>
                        <option value="HomeScreen">HomeScreen</option>
                    </select>
                </div>
                <div class="form-group">
                    <label><%= __("ADMIN_PAGES_LABEL_PUBLISHED") %></label>
                    <div class="checkbox">
                        <label><input type="checkbox" selectedproperty="{{ page.published }}" ng-model="page.published" /></label>
                    </div>
                </div>
            </div>
            <div class="col-lg-12">
                <div class="form-group">
                    <label><%= __("ADMIN_PAGES_LABEL_CONTENT") %></label>
                    <textarea ng-model="page.content" ui-tinymce="defaultTinyMceConfig" style="height: 250px"></textarea>
                </div>
            </div>
        </div>
    </div>
    <div class="tab-pane" id="metadata">
        <div class="row">
            <div class="col-lg-12">
                <div class="form-group">
                    <label><%= __("ADMIN_PAGES_LABEL_KEYWORDS") %></label>
                    <textarea class="form-control" ng-model="page.keywords"></textarea>
                </div>

                <div class="form-group">
                    <label><%= __("ADMIN_PAGES_LABEL_DESCRIPTION") %></label>
                    <textarea class="form-control" ng-model="page.description"></textarea>
                </div>
            </div>
        </div>
    </div>
</div>