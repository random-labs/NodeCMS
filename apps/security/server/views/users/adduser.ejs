<div ui-growler></div>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-body">
                <form name='addform'>
                    
                    <div class="form-group">
                        <label><%= __('ADMIN_USERS_LABEL_USERNAME') %></label>
                        <input class="form-control" type="text" data-ng-model="user.username" required />
                    </div>
                    <div class="form-group">
                        <label><%= __('ADMIN_USERS_LABEL_PASSWORD') %></label>
                        <input class="form-control" type="password" data-ng-model="user.password" required />
                    </div>
                    <div class="form-group">
                        <label><%= __('ADMIN_USERS_LABEL_FULLNAME') %></label>
                        <input class="form-control" type="text" data-ng-model="user.fullname" required />
                    </div>
                    <div class="form-group">
                        <label><%= __('ADMIN_USERS_LABEL_ACTIVE') %></label>
                        <div class="checkbox">
                            <input type="checkbox" ng-model="user.active" />
                        </div>
                    </div>

                    <button class="btn btn-primary" ng-disabled="!addform.$valid" ng-click="saveAndCloseButtonClicked()">
                        <%= __('ADMIN_COMMON_BUTTON_SAVEANDCLOSE') %>
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>