<div class="row">
    <div class="col-lg-12 titlesection">
       <h3><i class="fa fa-file-text-o fa-fw"></i> <%= __('ADMIN_PAGES_LABEL_MAINHEADER') %></h3>
    </div>
</div>

<div class='row'>
    <div class='col-lg-12'>
        <ol class='breadcrumb'>
            <li><a href="#/dashboard"><i class='fa fa-dashboard'></i> Home</a></li>
            <li><i class='fa fa-file-text-o'></i> Pages</li>
        </ol>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <span>
                    <i class="fa fa-file-text-o fa-fw"></i>
                    <a href="#/addcontentpage"><%= __("ADMIN_PAGES_LABEL_CREATENEW") %></a>
                </span>
                
               <!--  <span>
                    <i class="fa fa-refresh fa-fw"></i>
                    <a href="#" ng-click="clearCache()"><%= __("ADMIN_PAGES_LABEL_CLEARCACHE") %></a>
                </span> -->
            </div>
            <div class="panel-body">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <td style="text-align: left"><%= __("ADMIN_PAGES_LABEL_TABLEHEADER_NAME") %></td>
                            <td style="text-align: center; width: 150px"><%= __("ADMIN_PAGES_LABEL_TABLEHEADER_CHANGED") %></td>
                            <td style="text-align: center"><%= __("ADMIN_PAGES_LABEL_TABLEHEADER_PUBLISHED") %></td>
                            <td style="text-align: center"></td>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="page in pages">
                            <td style="text-align: left">
                                <a href="#/editcontentpage/{{page._id}}"><h4>{{ page.name }}</h4></a>
                                <span>
                                    <a href="{{ page.url }}"
                                       target="_blank"><i class="icon-eye-open"></i>{{ page.url }}</a>
                                </span>
                            </td>
                            <td>
                                <span>{{ page.changes }} </span>
                            </td>
                            <td style="text-align: center; width: 50px;">
                                <i ng-show="page.published" class="fa fa-check-circle fa-lg fa-green"></i>
                                <i ng-show="!page.published" class="fa fa-ban fa-lg fa-red"></i>   
                            </td>
                            <td style="text-align: center; width: 50px;">
                                <a ng-click="deletePage($index)" title="<%= __("ADMIN_PAGES_LABEL_DELETEPAGE", "{{ page.name }} ")%>"><i class="fa fa-trash-o fa-fw"></i></a>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script type="text/ng-template" id="confirmdeletecontentpage.html">
    <div class="modal-header">
        <h3 class="modal-title" translate>Confirm?</h3>
    </div>
    <div class="modal-body" translate>
        Are you sure that you want to delete the page: {{ pageToDelete }}?
    </div>
    <div class="modal-footer">
        <button class="btn btn-primary" ng-click="ok()"><%= __('ADMIN_COMMON_BUTTON_OK') %></button>
        <button class="btn btn-link" ng-click="cancel()"><%= __('ADMIN_COMMON_BUTTON_CLOSE') %></button>
    </div>
</script>