<div class="row">
    <div class="col-lg-12 titlesection">
       <h3><i class="fa fa-file-text-o fa-fw"></i> <%= __('ADMIN_PAGES_LABEL_MAINHEADER') %></h3>
    </div>
</div>

<div class='row'>
    <div class='col-lg-12'>
        <ol class='breadcrumb'>
            <li>
                <a href="/admin"><i class='fa fa-dashboard'></i> Home</a>                                              
            </li>
            <li>
                <i class='fa fa-file-text-o'></i> Pages
            </li>
        </ol>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <span>
                    <i class="fa fa-file-text-o fa-fw"></i>
                    <a href="#/addcontentpage"><%= __("ADMIN_PAGES_LABEL_CREATENEW") %></a>
                </span>
                
                <span>
                    <i class="fa fa-refresh fa-fw"></i>
                    <a href="#" ng-click="clearCache()"><%= __("ADMIN_PAGES_LABEL_CLEARCACHE") %></a>
                </span>
            </div>
            <div class="panel-body">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <td style="text-align: left"><%= __("ADMIN_PAGES_LABEL_TABLEHEADER_NAME") %></td>
                            <td style="text-align: center; width: 150px"><%= __("ADMIN_PAGES_LABEL_TABLEHEADER_CHANGED") %></td>
                            <td style="text-align: center"><%= __("ADMIN_PAGES_LABEL_TABLEHEADER_PUBLISHED") %></td>
                            <td style="text-align: center"></td>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="page in pages">
                            <td style="text-align: left">
                                <a href="#/editcontentpage/{{page._id}}"><h4>{{ page.name }}</h4></a>
                                <span>
                                    <a href="{{ page.url }}"
                                       target="_blank"><i class="icon-eye-open"></i>{{ page.url }}</a>
                                </span>
                            </td>
                            <td>
                                <span>{{ page.changes }} </span>
                            </td>
                            <td style="text-align: center; width: 50px;">
                                <i ng-show="page.published" class="fa fa-check-circle fa-lg fa-green"></i>
                                <i ng-show="!page.published" class="fa fa-ban fa-lg fa-red"></i>   
                            </td>
                            <td style="text-align: center; width: 50px;">
                                <a href="#" ng-click="deletePage($index)" title="<%= __("ADMIN_PAGES_LABEL_DELETEPAGE", "{{ page.name }} ")%>"><i class="fa fa-trash-o fa-fw"></i></a>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>