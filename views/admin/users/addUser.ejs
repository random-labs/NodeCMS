@using Template.Logic.Services
@using Template.Web.Areas.Admin.HtmlHelpers
@using Template.Web.HtmlHelpers
@{
    Layout = null;
}

@Html.GenerateBreadCrumbFor("adduser")

<div ui-growler></div>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-body">
                <form name='addform'>
                    
                    <div class="form-group">
                        <label>@Html.GetResource(ResourceClass.Admin, "USERS_LABEL_USERNAME")</label>
                        <input class="form-control" type="text" data-ng-model="user.UserName" required />
                    </div>
                    <div class="form-group">
                        <label>@Html.GetResource(ResourceClass.Admin, "USERS_LABEL_PASSWORD")</label>
                        <input class="form-control" type="password" data-ng-model="user.Password" required />
                    </div>
                    <div class="form-group">
                        <label>@Html.GetResource(ResourceClass.Admin, "USERS_LABEL_FULLNAME")</label>
                        <input class="form-control" type="text" data-ng-model="user.FullName" required />
                    </div>
                    <div class="form-group">
                        <label>@Html.GetResource(ResourceClass.Admin, "USERS_LABEL_ACTIVE")</label>
                        <div class="checkbox">
                            <input type="checkbox" ng-model="user.Active" />
                        </div>
                    </div>

                    <button class="btn btn-primary" ng-disabled="!addform.$valid" ng-click="saveAndCloseButtonClicked()">
                        @Html.GetResource(ResourceClass.Admin, "COMMON_BUTTON_SAVEANDCLOSE")
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>