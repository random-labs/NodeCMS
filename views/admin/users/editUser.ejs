<!-- @Html.GenerateBreadCrumbFor("edituser") -->

<div ui-growler></div>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-body">
                <form name='editform'>

                    <div class="form-group">
                        <label><%= __('ADMIN_USERS_LABEL_USERNAME') %></label>
                        <input class="form-control" type="text" data-ng-model="user.UserName" disabled="disabled" />
                    </div>
                    <div class="form-group">
                        <label><%= __('ADMIN_USERS_LABEL_PASSWORD') %></label>

                        <input type="password" class="form-control" data-ng-disabled="!user.ChangePassword" data-ng-model="user.Password"
                               ng-required="user.ChangePassword" />
                        <input id="changePassword" type="checkbox" ng-model="user.ChangePassword" />
                        <label for="changePassword" class=""><%= __('ADMIN_USERS_LABEL_CHANGEPASSWORD') %></label>
                    </div>
                    <div class="form-group">
                        <label><%= __('ADMIN_USERS_LABEL_FULLNAME') %></label>
                        <input class="form-control" type="text" data-ng-model="user.FullName" required />
                    </div>
                    <div class="form-group">
                        <label><%= __('ADMIN_USERS_LABEL_ACTIVE') %></label>
                        <div class="checkbox">
                            <input type="checkbox" ng-model="user.Active" />
                        </div>
                    </div>

                    <button class="btn btn-primary" ng-disabled="!editform.$valid" ng-click="saveButtonClicked()">
                        <%= __('ADMIN_COMMON_BUTTON_SAVE') %>
                    </button>
                    <button class="btn btn-primary" ng-disabled="!editform.$valid" ng-click="saveAndCloseButtonClicked()">
                        <%= __('ADMIN_COMMON_BUTTON_SAVEANDCLOSE') %>
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>